<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/task_view"/>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/line1"
        android:background="@android:color/darker_gray"/>

    <GridView
        android:layout_width="@dimen/colomn_size"
        android:layout_height="@dimen/colomn_hauteur"
        android:id="@+id/gridAFaire"
        android:columnWidth="100dp"
        android:numColumns="3"
        >

        </GridView>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/line2"
        android:background="@android:color/darker_gray"/>

    <GridView
        android:layout_width="@dimen/colomn_size"
        android:layout_height="@dimen/colomn_hauteur"
        android:id="@+id/gridenCours"
        android:columnWidth="100dp"
        android:numColumns="3"
        >

    </GridView>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/line2"
        android:background="@android:color/darker_gray"/>

    <GridView
        android:layout_width="@dimen/colomn_size"
        android:layout_height="@dimen/colomn_hauteur"
        android:id="@+id/gridaRelire"
        android:columnWidth="100dp"
        android:numColumns="3"
        >

    </GridView>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/line2"
        android:background="@android:color/darker_gray"/>

    <GridView
        android:layout_width="@dimen/colomn_size"
        android:layout_height="@dimen/colomn_hauteur"
        android:id="@+id/griddone"
        android:columnWidth="100dp"
        android:numColumns="3"
        >

    </GridView>


</LinearLayout>